[*]
charset=utf-8
# 设置换行符，值为lf
end_of_line=lf
# 设为true表示使文件以一个空白行结尾
insert_final_newline=false
# 设置缩进风格(tab是硬缩进，space为软缩进)
indent_style=space
# 用一个整数定义的列数来设置缩进的宽度，如果indent_style为tab，则此属性默认为tab_width
indent_size=2

[{*.ng,*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_style=tab
tab_width=2

[{.babelrc,.stylelintrc,jest.config,.eslintrc,.prettierrc,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_style=tab
tab_width=2

[*.css]
indent_style=tab
tab_width=2

[{*.applejs,*.js}]
indent_style=tab
tab_width=2

[*.js.flow]
indent_style=tab
tab_width=2

[{tsconfig.app.json,tsconfig.e2e.json,tsconfig.json,tsconfig.spec.json}]
indent_style=tab
tab_width=2

[*.js.map]
indent_style=tab
tab_width=2

[*.less]
indent_style=tab
tab_width=2

[*.vue]
indent_style=tab
tab_width=2

[{.analysis_options,*.yml,*.yaml}]
indent_style=space
indent_size=2

